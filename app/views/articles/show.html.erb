<div>
  <div class="d-flex flex-row mb-0 p-0">
    <p class="mb-0 p-0 text-lg"><%= @article.title %></p>
    <% if current_user != nil && current_user.id == @article.user_id %>
      <div class="btn-group ms-auto mt-2 mb-2 csm-btn-container" role="group" aria-label="Basic example">
        <%= button_to "Edit", edit_article_path(@article), class: "btn btn-outline-light border-0 csm-btn", method: "get" %>
        <%= button_to "Delete", article_path(@article),
                class: "btn btn-outline-light  border-0 border-white csm-btn",
                method: :delete,
                data: { confirm: "Are you sure?" } %>
      </div>
    <% end %>
  </div>
  <div class="">
    <p class="">
      <span class="text-sm mb-0 p-0 text-muted">by <%= @article.user.first_name %> <%= @article.user.last_name %> | </span>
      <span class="text-sm mb-0 p-0 text-muted">on <%=@article.created_at.strftime("%d %b %Y")%> | </span>
    </p>
  </div>
  <div>
    <p><%= @article.body %></p>
  </div>


  <hr>
  <div class="d-flex flex-column-reverse">
    <div>
      <p>
      <%= render @article.comments %>
    </div>
    <div>
      <h2 class="mt-2 mb-2">Discussion</h2>
      <%= render partial: 'comments/form', locals: { user: @article.user }%>
    </div>
  </div>

</div>
